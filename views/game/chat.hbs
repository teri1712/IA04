<script src="/online.js"></script>
<style>
  .message-container{ margin-top: 20px; width: 60%; overflow-y: scroll; }
  .left-message{ direction: ltr; } .right-message{ direction: rtl; }
</style>

<div class="p-2 d-flex flex-column h-100">
  <nav
    class="w-100 navbar navbar-expand-lg navbar-light d-flex flex-row rounded border p-2 align-items-center"
  >
    <div class="flex-grow-1 d-flex flex-row align-items-center">
      <a class="nav-link" href="/">Online users</a>
      <a class="nav-link disabled" href="/chat">Chat</a>
      <a class="nav-link" href="/match">Matches</a>
      {{#if has_match}}
        <a class="nav-link" href="/match/user?id={{user.id}}">My Match</a>
      {{else}}
        <a class="nav-link" href="/match/create">Create match</a>
      {{/if}}
    </div>
    <form action="/logout" method="post" class="m-0">
      <button type="submit" class="btn btn-warning">Logout</button>
    </form>
  </nav>
  <div class="mt-3 d-flex flex-column align-items-center flex-grow-1 h-75">
    <h1>
      Welcome to Global Chat Box
    </h1>
    <div class="rounded border bg-light p-2 flex-grow-1 message-container">

      {{#each messages}}
        {{#if isMine}}
          <div class="right-message m-2">
            <h4>{{from.name}}</h4>
            <p class="bg-white border rounded p-3"> {{content}}</p>
          </div>
        {{else}}
          <div class="left-message m-2">
            <h4>{{from.name}}</h4>
            <p class="bg-white border rounded p-3">{{content}}</p>
          </div>
        {{/if}}

      {{/each}}
    </div>
    <div class="p-2" style="width: 60%;">
      <div class="form-text my-2">Type your message here</div>
      <div class="d-flex flex-row align-items-center">
        <input
          type="text"
          class="form-control flex-grow-1 me-2"
          id="messageField"
        />
        <button
          id="send-message"
          type="button"
          class="btn btn-primary h-50"
        >Send</button>
      </div>
    </div>
  </div>
</div>

<script src="/chat.js"></script>