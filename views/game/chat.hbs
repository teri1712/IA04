<script>
  window.userName = '{{me.Name}}'; window.partner ='{{you.ID}}';

</script>

<style>
  .message-container{ margin-top: 20px; width: 60%; overflow-y: scroll; }
  .left-message{ direction: ltr; } .right-message{ direction: rtl; }
</style>

<div class="p-2 d-flex flex-column h-100">
  <div class="rounded border p-2">
    <form action="/logout" method="post" class="m-0" style="direction: rtl;">
      <button type="submit" class="btn btn-warning">Logout</button>
    </form>
  </div>
  <div class="mt-3 d-flex flex-column align-items-center flex-grow-1 h-75">
    <h1>
      Welcome to Global Chat Box
    </h1>
    <div class="rounded border bg-light p-2 flex-grow-1 message-container">

      {{#each messages}}
        {{#if isMine}}
          <div class="right-message m-2">
            <h4>{{from.name}}</h4>
            <p class="bg-white border rounded p-3"> {{content}}</p>
          </div>
        {{else}}
          <div class="left-message m-2">
            <h4>{{from.name}}</h4>
            <p class="bg-white border rounded p-3">{{content}}</p>
          </div>
        {{/if}}

      {{/each}}
    </div>
    <div class="p-2" style="width: 60%;">
      <div class="form-text my-2">Type your message here</div>
      <div class="d-flex flex-row align-items-center">
        <input
          type="text"
          class="form-control flex-grow-1 me-2"
          id="messageField"
        />
        <button
          type="button"
          class="btn btn-primary h-50"
          onclick="sendMessage()"
        >Send</button>
      </div>
    </div>
  </div>
</div>

<script src="/long-polling.js"></script>
<script>
  startPolling({{user.id}},{{current_time}});
</script>