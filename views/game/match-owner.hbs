<script src="/online.js"></script>

<style>
  .toast-container{ position: fixed; bottom: 20px; right: 20px; z-index: 17; }
</style>
<link rel="stylesheet" href="/tictac.css" />
<div class="p-2 d-flex flex-column h-100" style="z-index: 1;position:relative">
  <nav
    class="w-100 navbar navbar-expand-lg navbar-light d-flex flex-row rounded border p-2 align-items-center"
  >
    <div class="flex-grow-1 d-flex flex-row align-items-center">
      <a class="nav-link" href="/">Online users</a>
      <a class="nav-link disabled" href="/chat">Chat</a>
      <a class="nav-link" href="/match">Matches</a>
    </div>
    <form action="/logout" method="post" class="m-0">
      <button type="submit" class="btn btn-warning">Logout</button>
    </form>
  </nav>
  <div class="mt-3 d-flex flex-column align-items-center flex-grow-1 h-75">
    <h1>
      Welcome to Game of
      {{owner.name}}
    </h1>
    <h2 style="color: red;">Hãy đợi người chơi khác xin vào</h2>
    <div class="d-flex flex-row rounded border bg-light p-2">
      <div id="board" class="board">
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
      </div>
      <div
        class="d-flex flex-column align-items-center"
        style="width: 200px;"
      >Records</div>
    </div>
  </div>
</div>
<div class="toast-container">
  <div id="confirm-toast" class="toast p-3">
    <div class="toast-body">
      Confirm start game request
      <div class="mt-2 pt-2 border-top">
        <button
          id="confirm-button"
          type="button"
          class="btn btn-primary btn-sm"
        >Ok</button>
        <button
          id="confirm-close"
          type="button"
          class="btn btn-secondary btn-sm"
          data-bs-dismiss="toast"
        >Close</button>
      </div>
    </div>
  </div>

</div>
