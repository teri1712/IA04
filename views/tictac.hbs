<link rel="stylesheet" href="/tictac.css" />
<div class="p-2 d-flex flex-column h-100">
  <nav
    class="w-100 navbar navbar-expand-lg navbar-light d-flex flex-row rounded border p-2 align-items-center"
  >
    <div class="flex-grow-1 d-flex flex-row align-items-center">
      <a class="nav-link" href="/">Online users</a>
      <a class="nav-link disabled" href="/chat">Chat</a>
      <a class="nav-link" href="/match">Matches</a>
    </div>
    <form action="/logout" method="post" class="m-0">
      <button type="submit" class="btn btn-warning">Logout</button>
    </form>
  </nav>
  <div class="mt-3 d-flex flex-column align-items-center flex-grow-1 h-75">
    <h1>
      Welcome to Game of
      {{owner.name}}
    </h1>
    <div class="container rounded border bg-light p-2 flex-grow-1">
      <div class="container">
        <div class="row">
          <div id="board" class="col-6 board">
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
          </div>
          <div id="message-container" class="col-3">
            {{#each messages}}
              <strong>{{user_name}}</strong>
              <p>{{content}}</p>
            {{/each}}
          </div>
          <div class="col-3">Record</div>
        </div>
      </div>

    </div>
  </div>
</div>
{{#if isOWner}}
  <div
    id="confirm-toast"
    class="toast"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <div class="toast-body">
      Confirm start game request
      <div class="mt-2 pt-2 border-top">
        <button type="button" class="btn btn-primary btn-sm">Ok</button>
        <button
          type="button"
          class="btn btn-secondary btn-sm"
          data-bs-dismiss="toast"
        >Close</button>
      </div>
    </div>
  </div>
{{/if}}

<script src="/tictac.js"></script>